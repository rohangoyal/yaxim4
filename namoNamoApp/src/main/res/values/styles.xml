<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--     the unprefixed ones (without android:) are for the Sherlock implementation -->

    <style name="RosterGroupName">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
	<item name="android:paddingTop">2dp</item>
	<item name="android:paddingBottom">2dp</item>
    </style>

 
    <style name="RosterGroupItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RosterGroupItem.Light">
	<item name="android:textColor">#000000</item>
    </style>
    <style name="ThemeOverlay.YourApp" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:textColor">#757575</item>
    </style>
	<style name="StyleErrorView">
		<item name="android:textSize">18sp</item>
		<item name="android:padding">5sp</item>
		<item name="android:textColor">#000</item>
		<item name="android:background">#b44</item>
		<item name="android:shadowColor">#44000000</item>
		<item name="android:shadowRadius">3.0</item>
	</style>
	<style name="StyleErrorView.Light">
		<item name="android:background">#f88</item>
		<item name="android:textColor">#400</item>
	</style>
    <style name="RosterMessageCounter">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:layout_marginEnd">4dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginStart">4dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingStart">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingEnd">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">11dip</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:background">@drawable/count_bcg</item>
        <item name="android:text"></item>
    </style>

    <style name="ChatText">
	<item name="android:textSize">18sp</item>
    </style>
    <style name="ChatText.Light">
	<item name="android:textColor">#000000</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>

    </style>


    <!-- Base application theme. -->
    <color name="primary">@color/colorAccent</color>
    <color name="primaryDark">@color/colorAccent</color>

    <!-- dimensions -->
    <dimen name="image_width">120dp</dimen>
    <dimen name="image_final_width">32dp</dimen>
    <dimen name="spacing_normal">16dp</dimen>



    <!-- styles -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>

    </style>
    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>

    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/colorAccent</item>
        <item name="background">@color/colorAccent</item>

    </style>

    <style name="Theme.MyAppTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#ff0000</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ItemStyle">

        <item name="android:textSize">14sp</item>

    </style>


    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">#FFB805</item>
        <item name="fab_colorPressed">#F2AB00</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#ff0000</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#43A047</item>
        <item name="fab_colorPressed">#2E7D32</item>
        <item name="fab_colorRipple">#1B5E20</item>
    </style>
    <style name="MenuButtonsSmall.Blue">
        <item name="fab_colorNormal">#1E90FF</item>
        <item name="fab_colorPressed">#3F51B5</item>
        <item name="fab_colorRipple">#303F9F</item>
    </style>
</resources>
