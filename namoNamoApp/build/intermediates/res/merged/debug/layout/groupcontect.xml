<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#d3d3d3">
   
  
  <ScrollView 
       android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="#d3d3d3"
        android:orientation="vertical" >
        
        
        
        

        
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
           
            android:padding="0dp" >
            
                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="center">
                     
                 </LinearLayout>
                 
                   
               
               
          </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="5dp"
              android:elevation="4dp"
            android:background="@drawable/bgnd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/category" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
               
                android:gravity="center" >

                <TextView                    
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--Select Category--"
                     android:paddingTop="5dp"
                     
                android:paddingBottom="5dp"
                    android:textColor="#d0d0d0"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/pencil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_edit" />
            </LinearLayout>
        </LinearLayout>
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="8dp"
              android:layout_marginTop="5dp"
              android:elevation="4dp"
            android:background="@drawable/bgnd" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mobile1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:gravity="center" >

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:textColor="#000000"
                     android:background="@null"
                     android:inputType="number"
                    android:textColorHint="#d3d3d3"
                    android:focusable="true"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
        
          
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="5dp"
               android:layout_marginTop="5dp"
               android:elevation="4dp"
               android:background="@drawable/bgnd" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/landline1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:gravity="center" >

                <EditText
                    android:id="@+id/landline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="landline"
                    android:textColor="#000000"
                     android:textColorHint="#d3d3d3"
                     android:inputType="numberDecimal"
                     android:background="@null"
                     
android:focusableInTouchMode="true"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
          
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
           
            android:padding="0dp" >
            
                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="center">
                     
                 </LinearLayout>
                 
                   
               
               
          </LinearLayout>
          
          
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="5dp"
              android:layout_marginTop="5dp"
              android:elevation="4dp"
              android:background="@drawable/bgnd" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:gravity="center" >

                <EditText
                    android:id="@+id/emailadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                     android:background="@null"
                    android:textColor="#000000"
                     android:textColorHint="#d3d3d3"
                     android:inputType="textEmailAddress"
                    
android:focusableInTouchMode="true"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
        
          
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="5dp"
               android:layout_marginTop="5dp"
               android:elevation="4dp"
               android:background="@drawable/bgnd"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/website1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:gravity="center" >

                <EditText
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Website"
                    android:textColor="#000000"
                     android:background="@null"
                     android:textColorHint="#d3d3d3"
                     android:inputType="textWebEmailAddress"
                    
android:focusableInTouchMode="true"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
        
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
           
            android:padding="0dp" >
            
                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="center">
                     
                 </LinearLayout>
                 
                   
               
               
          </LinearLayout>
          
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="5dp"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:background="@drawable/bgnd"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:gravity="center" >

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                     android:background="@null"
                    android:textColor="#000000"
                    android:textColorHint="#d3d3d3"
                    android:editable="false"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrowdown1" />
                
            </LinearLayout>
        </LinearLayout>
            
            
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:id="@+id/llayout1"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:background="@drawable/bgnd"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sstreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:layout_marginLeft="-8dp"
                    android:textSize="18dp"
                    android:textColor="#000000" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:gravity="center" 
                android:layout_marginLeft="10dp">

                <EditText
                    android:id="@+id/street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    android:textColor="#000000"
                    android:textColorHint="#d3d3d3"
                    android:inputType="textPostalAddress"
                    android:background="@null"
                   
android:focusableInTouchMode="true"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            
        </LinearLayout>
        
            

               
           
        
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="5dp"
             android:id="@+id/llayout3"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:background="@drawable/bgnd"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ccityy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:text="City"
                    android:textColor="#000000"
                    android:layout_marginLeft="-10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:gravity="center" 
                android:layout_marginLeft="10dp">

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                     android:textColorHint="#d3d3d3"
                    android:textColor="#000000"
                    android:inputType="textCapWords"
                    android:background="@null"
                    
android:focusableInTouchMode="true"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical" >

                
                
            </LinearLayout>
        </LinearLayout>
            
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
           
            android:padding="0dp" >
            
                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="center">
                     
                 </LinearLayout>
                 
                  
               
               
          </LinearLayout>
          
    </LinearLayout>
</ScrollView>
</LinearLayout>


