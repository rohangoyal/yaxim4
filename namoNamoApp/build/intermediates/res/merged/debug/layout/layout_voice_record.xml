<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_refersh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vr_bg" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vr_mic" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:text="00:00:00"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vr_player_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_recorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_recorder"
                    android:layout_width="70dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="70dp"
                    android:background="@drawable/recorder_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_stop"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/stop_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/close_selector" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/save_selector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>